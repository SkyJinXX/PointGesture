{
  "name": "point-gesture",
  "version": "0.2.0",
  "description": "a gesture tool",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "rm -rf dist/* && electron-builder --win --x64",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "SkyJin",
  "license": "ISC",
  "dependencies": {
    "iohook": "^0.6.6",
    "robotjs": "~0.5.1"
  },
  "devDependencies": {
    "electron": "^9.4.0",
    "electron-builder": "^22.8.0",
    "electron-packager": "^15.0.0"
  },
  "build": {
    "appId": "PointGesture",
    "productName": "PointGesture",
    "win": {
      "target": [
        "portable",
        "nsis"
      ],
      "icon": "assets/images/app.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "${productName}_windows_installer_${version}.${ext}"
    },
    "portable": {
      "artifactName": "${productName}_windows_portable_${version}.${ext}"
    },
    "npmRebuild": false
  },
  "iohook": {
    "targets": [
      "node-59",
      "electron-76"
    ],
    "platforms": [
      "win32",
      "darwin",
      "linux"
    ],
    "arches": [
      "x64",
      "ia32"
    ]
  }
}
